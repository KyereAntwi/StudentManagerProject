@model IEnumerable<Subject>

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        @if (Model.Count() > 0)
        {
            <li class="list-group-item text-info">Filter courses by subject</li>
            foreach (var subject in Model)
            {
                <li class="list-group-item">
                    <a asp-page="/Courses" asp-route="@subject.Id">@subject.Name</a>
                </li>
            }
        }
        else
        {
            <li class="list-group-item text-info">Subject list empty</li>
        }
    </ul>
</div>
